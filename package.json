{
  "name": "logmagnifier",
  "displayName": "LogMagnifier",
  "description": "A stream-based log analysis tool for Visual Studio Code, designed to handle large log files efficiently.",
  "version": "0.6.0",
  "author": "webispy@gmail.com",
  "publisher": "webispy",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/webispy/vscode-logmagnifier.git"
  },
  "bugs": {
    "url": "https://github.com/webispy/vscode-logmagnifier/issues"
  },
  "homepage": "https://github.com/webispy/vscode-logmagnifier#readme",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "LogMagnifier",
      "properties": {
        "logmagnifier.maxFileSizeMB": {
          "type": "number",
          "default": 50,
          "description": "Maximum file size in MB for opening filtered logs as text documents. Larger files will open in safe mode."
        },
        "logmagnifier.regexHighlightColor": {
          "anyOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "properties": {
                "light": {
                  "type": "string"
                },
                "dark": {
                  "type": "string"
                }
              }
            }
          ],
          "default": "rgba(255, 255, 0, 0.3)",
          "description": "Background color for Regex highlight. Can be a color string, a preset name (e.g. 'Red'), or an object with light/dark values."
        },
        "logmagnifier.tempFilePrefix": {
          "type": "string",
          "default": "filtered_",
          "description": "Prefix for the filtered temp files."
        },
        "logmagnifier.statusBarTimeout": {
          "type": "number",
          "default": 5000,
          "description": "Duration for status bar messages in milliseconds."
        },
        "logmagnifier.enableRegexHighlight": {
          "type": "boolean",
          "default": false,
          "description": "Enable highlighting for Regex filters in the editor."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "logmagnifier-container",
          "title": "LogMagnifier",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "logmagnifier-container": [
        {
          "id": "logmagnifier-filters",
          "name": "Word Filters",
          "icon": "$(filter)"
        },
        {
          "id": "logmagnifier-regex-filters",
          "name": "Regex Filters",
          "icon": "$(regex)"
        }
      ]
    },
    "commands": [
      {
        "command": "logmagnifier.addFilterGroup",
        "title": "Add Word Filter Group",
        "icon": "$(add)"
      },
      {
        "command": "logmagnifier.addRegexFilterGroup",
        "title": "Add Regex Filter Group",
        "icon": "$(add)"
      },
      {
        "command": "logmagnifier.addFilter",
        "title": "Add Word Filter",
        "icon": "$(plus)"
      },
      {
        "command": "logmagnifier.addRegexFilter",
        "title": "Add Regex Filter",
        "icon": "$(plus)"
      },
      {
        "command": "logmagnifier.applyWordFilter",
        "title": "Apply Word Filter",
        "icon": "$(play)"
      },
      {
        "command": "logmagnifier.applyRegexFilter",
        "title": "Apply Regex Filter",
        "icon": "$(play)"
      },
      {
        "command": "logmagnifier.deleteFilter",
        "title": "Delete Filter",
        "icon": "$(trash)"
      },
      {
        "command": "logmagnifier.enableGroup",
        "title": "Enable Group",
        "icon": "$(circle-large-outline)"
      },
      {
        "command": "logmagnifier.disableGroup",
        "title": "Disable Group",
        "icon": "$(pass-filled)"
      },
      {
        "command": "logmagnifier.enableFilter",
        "title": "Enable Filter",
        "icon": "$(circle-large-outline)"
      },
      {
        "command": "logmagnifier.disableFilter",
        "title": "Disable Filter",
        "icon": "$(pass-filled)"
      },
      {
        "command": "logmagnifier.changeFilterColor",
        "title": "Change Color",
        "icon": "$(paintcan)"
      },
      {
        "command": "logmagnifier.toggleFilterHighlightMode",
        "title": "Toggle Highlight Mode",
        "icon": "$(arrow-both)"
      },
      {
        "command": "logmagnifier.toggleFilterHighlightMode.word",
        "title": "Toggle Highlight mode: word",
        "icon": "$(arrow-both)"
      },
      {
        "command": "logmagnifier.toggleFilterHighlightMode.line",
        "title": "Toggle Highlight mode: line",
        "icon": "$(arrow-both)"
      },
      {
        "command": "logmagnifier.toggleFilterHighlightMode.full",
        "title": "Toggle Highlight mode: full line",
        "icon": "$(arrow-both)"
      },
      {
        "command": "logmagnifier.toggleFilterCaseSensitivity.on",
        "title": "Toggle Case Sensitivity: On",
        "icon": "$(case-sensitive)"
      },
      {
        "command": "logmagnifier.toggleFilterCaseSensitivity.off",
        "title": "Toggle Case Sensitivity: Off",
        "icon": "$(preserve-case)"
      },
      {
        "command": "logmagnifier.previousMatch",
        "title": "Previous Match",
        "icon": "$(arrow-up)"
      },
      {
        "command": "logmagnifier.nextMatch",
        "title": "Next Match",
        "icon": "$(arrow-down)"
      },
      {
        "command": "logmagnifier.toggleFilterContextLine_cl0",
        "title": "Context lines: none",
        "icon": {
          "light": "resources/light/cl-0.svg",
          "dark": "resources/dark/cl-0.svg"
        }
      },
      {
        "command": "logmagnifier.toggleFilterContextLine_cl3",
        "title": "Context lines: ±3",
        "icon": {
          "light": "resources/light/cl-3.svg",
          "dark": "resources/dark/cl-3.svg"
        }
      },
      {
        "command": "logmagnifier.toggleFilterContextLine_cl5",
        "title": "Context lines: ±5",
        "icon": {
          "light": "resources/light/cl-5.svg",
          "dark": "resources/dark/cl-5.svg"
        }
      },
      {
        "command": "logmagnifier.toggleFilterContextLine_cl9",
        "title": "Context lines: ±9",
        "icon": {
          "light": "resources/light/cl-9.svg",
          "dark": "resources/dark/cl-9.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "logmagnifier.addFilterGroup",
          "when": "view == logmagnifier-filters",
          "group": "navigation"
        },
        {
          "command": "logmagnifier.addRegexFilterGroup",
          "when": "view == logmagnifier-regex-filters",
          "group": "navigation"
        },
        {
          "command": "logmagnifier.applyWordFilter",
          "when": "view == logmagnifier-filters",
          "group": "navigation"
        },
        {
          "command": "logmagnifier.applyRegexFilter",
          "when": "view == logmagnifier-regex-filters",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "logmagnifier.addFilter",
          "when": "view == logmagnifier-filters && viewItem =~ /filterGroup.*/",
          "group": "inline@1"
        },
        {
          "command": "logmagnifier.addRegexFilter",
          "when": "view == logmagnifier-regex-filters && viewItem =~ /filterGroup.*/",
          "group": "inline@1"
        },
        {
          "command": "logmagnifier.previousMatch",
          "when": "(view == logmagnifier-filters || view == logmagnifier-regex-filters) && (viewItem == filterItemEnabled || viewItem == filterItemDisabled || viewItem =~ /filterItem(Enabled|Disabled)_cl.*/)",
          "group": "inline@1"
        },
        {
          "command": "logmagnifier.deleteFilter",
          "when": "viewItem =~ /filterGroup.*/ && (view == logmagnifier-filters || view == logmagnifier-regex-filters)",
          "group": "inline@2"
        },
        {
          "command": "logmagnifier.nextMatch",
          "when": "(view == logmagnifier-filters || view == logmagnifier-regex-filters) && (viewItem == filterItemEnabled || viewItem == filterItemDisabled || viewItem =~ /filterItem(Enabled|Disabled)_cl.*/)",
          "group": "inline@2"
        },
        {
          "command": "logmagnifier.enableGroup",
          "when": "(view == logmagnifier-filters || view == logmagnifier-regex-filters) && viewItem == filterGroupDisabled",
          "group": "inline@3"
        },
        {
          "command": "logmagnifier.disableGroup",
          "when": "(view == logmagnifier-filters || view == logmagnifier-regex-filters) && viewItem == filterGroupEnabled",
          "group": "inline@3"
        },
        {
          "command": "logmagnifier.changeFilterColor",
          "when": "view == logmagnifier-filters && (viewItem == filterItemEnabled || viewItem == filterItemDisabled || viewItem =~ /filterItem(Enabled|Disabled)_cl.*/)",
          "group": "inline@3"
        },
        {
          "command": "logmagnifier.toggleFilterHighlightMode.word",
          "when": "view == logmagnifier-filters && (viewItem == filterItemEnabled || viewItem == filterItemDisabled || viewItem =~ /filterItem(Enabled|Disabled)_cl.*/) && viewItem =~ /.*_hm0.*/",
          "group": "inline@4"
        },
        {
          "command": "logmagnifier.toggleFilterHighlightMode.line",
          "when": "view == logmagnifier-filters && (viewItem == filterItemEnabled || viewItem == filterItemDisabled || viewItem =~ /filterItem(Enabled|Disabled)_cl.*/) && viewItem =~ /.*_hm1.*/",
          "group": "inline@4"
        },
        {
          "command": "logmagnifier.toggleFilterHighlightMode.full",
          "when": "view == logmagnifier-filters && (viewItem == filterItemEnabled || viewItem == filterItemDisabled || viewItem =~ /filterItem(Enabled|Disabled)_cl.*/) && viewItem =~ /.*_hm2.*/",
          "group": "inline@4"
        },
        {
          "command": "logmagnifier.toggleFilterCaseSensitivity.off",
          "when": "view == logmagnifier-filters && (viewItem == filterItemEnabled || viewItem == filterItemDisabled || viewItem =~ /filterItem(Enabled|Disabled)_cl.*/) && viewItem =~ /.*_cs0$/",
          "group": "inline@5"
        },
        {
          "command": "logmagnifier.toggleFilterCaseSensitivity.on",
          "when": "view == logmagnifier-filters && (viewItem == filterItemEnabled || viewItem == filterItemDisabled || viewItem =~ /filterItem(Enabled|Disabled)_cl.*/) && viewItem =~ /.*_cs1$/",
          "group": "inline@5"
        },
        {
          "command": "logmagnifier.toggleFilterContextLine_cl0",
          "when": "view == logmagnifier-filters && viewItem =~ /filterItem(Enabled|Disabled)_cl0/",
          "group": "inline@6"
        },
        {
          "command": "logmagnifier.toggleFilterContextLine_cl3",
          "when": "view == logmagnifier-filters && viewItem =~ /filterItem(Enabled|Disabled)_cl3/",
          "group": "inline@6"
        },
        {
          "command": "logmagnifier.toggleFilterContextLine_cl5",
          "when": "view == logmagnifier-filters && viewItem =~ /filterItem(Enabled|Disabled)_cl5/",
          "group": "inline@6"
        },
        {
          "command": "logmagnifier.toggleFilterContextLine_cl9",
          "when": "view == logmagnifier-filters && viewItem =~ /filterItem(Enabled|Disabled)_cl9/",
          "group": "inline@6"
        },
        {
          "command": "logmagnifier.deleteFilter",
          "when": "(viewItem == filterItemEnabled || viewItem == filterItemDisabled || viewItem =~ /filterItem(Enabled|Disabled)_cl.*/) && (view == logmagnifier-filters || view == logmagnifier-regex-filters)",
          "group": "inline@7"
        },
        {
          "command": "logmagnifier.enableFilter",
          "when": "(view == logmagnifier-filters || view == logmagnifier-regex-filters) && (viewItem == filterItemDisabled || viewItem =~ /filterItemDisabled_cl.*/)",
          "group": "inline@8"
        },
        {
          "command": "logmagnifier.disableFilter",
          "when": "(view == logmagnifier-filters || view == logmagnifier-regex-filters) && (viewItem == filterItemEnabled || viewItem =~ /filterItemEnabled_cl.*/)",
          "group": "inline@8"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.104.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "uuid": "^13.0.0"
  }
}