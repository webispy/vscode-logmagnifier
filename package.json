{
  "name": "loglens",
  "displayName": "LogLens",
  "description": "High-performance log analyzer with multi-layered filtering, keyword highlighting, and optimized large file support.",
  "version": "0.2.0",
  "author": "webispy@gmail.com",
  "publisher": "webispy",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/webispy/vscode-loglens.git"
  },
  "bugs": {
    "url": "https://github.com/webispy/vscode-loglens/issues"
  },
  "homepage": "https://github.com/webispy/vscode-loglens#readme",
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "LogLens",
      "properties": {
        "loglens.maxFileSizeMB": {
          "type": "number",
          "default": 50,
          "description": "Maximum file size in MB for opening filtered logs as text documents. Larger files will open in safe mode."
        },
        "loglens.highlightColor": {
          "type": "string",
          "default": "rgba(255, 255, 0, 0.3)",
          "description": "Background color for log highlights."
        },
        "loglens.tempFilePrefix": {
          "type": "string",
          "default": "filtered_",
          "description": "Prefix for the filtered temp files."
        },
        "loglens.statusBarTimeout": {
          "type": "number",
          "default": 5000,
          "description": "Duration for status bar messages in milliseconds."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "loglens-container",
          "title": "LogLens",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "loglens-container": [
        {
          "id": "loglens-filters",
          "name": "Word Filters",
          "icon": "$(filter)"
        },
        {
          "id": "loglens-regex-filters",
          "name": "Regex Filters",
          "icon": "$(regex)"
        }
      ]
    },
    "commands": [
      {
        "command": "loglens.addFilterGroup",
        "title": "Add Word Filter Group",
        "icon": "$(add)"
      },
      {
        "command": "loglens.addRegexFilterGroup",
        "title": "Add Regex Filter Group",
        "icon": "$(add)"
      },
      {
        "command": "loglens.addFilter",
        "title": "Add Word Filter",
        "icon": "$(plus)"
      },
      {
        "command": "loglens.addRegexFilter",
        "title": "Add Regex Filter",
        "icon": "$(plus)"
      },
      {
        "command": "loglens.applyFilter",
        "title": "Apply Filter",
        "icon": "$(play)"
      },
      {
        "command": "loglens.deleteFilter",
        "title": "Delete Filter",
        "icon": "$(trash)"
      },
      {
        "command": "loglens.enableGroup",
        "title": "Enable Group",
        "icon": "$(circle-large-outline)"
      },
      {
        "command": "loglens.disableGroup",
        "title": "Disable Group",
        "icon": "$(pass-filled)"
      },
      {
        "command": "loglens.enableFilter",
        "title": "Enable Filter",
        "icon": "$(circle-large-outline)"
      },
      {
        "command": "loglens.disableFilter",
        "title": "Disable Filter",
        "icon": "$(pass-filled)"
      },
      {
        "command": "loglens.changeFilterColor",
        "title": "Change Color",
        "icon": "$(paintcan)"
      },
      {
        "command": "loglens.toggleFilterHighlightMode",
        "title": "Toggle Full Line Highlight",
        "icon": "$(arrow-both)"
      },
      {
        "command": "loglens.toggleFilterCaseSensitivity",
        "title": "Toggle Case Sensitivity",
        "icon": "$(case-sensitive)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "loglens.addFilterGroup",
          "when": "view == loglens-filters",
          "group": "navigation"
        },
        {
          "command": "loglens.addRegexFilterGroup",
          "when": "view == loglens-regex-filters",
          "group": "navigation"
        },
        {
          "command": "loglens.applyFilter",
          "when": "view == loglens-filters || view == loglens-regex-filters",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "loglens.toggleFilterHighlightMode",
          "when": "view == loglens-filters && (viewItem == filterItemEnabled || viewItem == filterItemDisabled)",
          "group": "inline@2"
        },
        {
          "command": "loglens.enableGroup",
          "when": "(view == loglens-filters || view == loglens-regex-filters) && viewItem == filterGroupDisabled",
          "group": "inline@3"
        },
        {
          "command": "loglens.disableGroup",
          "when": "(view == loglens-filters || view == loglens-regex-filters) && viewItem == filterGroupEnabled",
          "group": "inline@3"
        },
        {
          "command": "loglens.addFilter",
          "when": "view == loglens-filters && viewItem =~ /filterGroup.*/",
          "group": "inline@1"
        },
        {
          "command": "loglens.addRegexFilter",
          "when": "view == loglens-regex-filters && viewItem =~ /filterGroup.*/",
          "group": "inline@1"
        },
        {
          "command": "loglens.enableFilter",
          "when": "(view == loglens-filters || view == loglens-regex-filters) && viewItem == filterItemDisabled",
          "group": "inline@5"
        },
        {
          "command": "loglens.disableFilter",
          "when": "(view == loglens-filters || view == loglens-regex-filters) && viewItem == filterItemEnabled",
          "group": "inline@5"
        },
        {
          "command": "loglens.deleteFilter",
          "when": "(viewItem == filterItemEnabled || viewItem == filterItemDisabled) && (view == loglens-filters || view == loglens-regex-filters)",
          "group": "inline@4"
        },
        {
          "command": "loglens.deleteFilter",
          "when": "viewItem =~ /filterGroup.*/ && (view == loglens-filters || view == loglens-regex-filters)",
          "group": "inline@2"
        },
        {
          "command": "loglens.changeFilterColor",
          "when": "view == loglens-filters && (viewItem == filterItemEnabled || viewItem == filterItemDisabled)",
          "group": "inline@1"
        },
        {
          "command": "loglens.toggleFilterCaseSensitivity",
          "when": "view == loglens-filters && (viewItem == filterItemEnabled || viewItem == filterItemDisabled)",
          "group": "inline@3"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "uuid": "^13.0.0"
  }
}